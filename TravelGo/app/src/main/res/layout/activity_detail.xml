<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Greeting Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greeting_text"
            android:textSize="16sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"/>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/holder_search"
            android:hint="@string/search_hint"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableEnd="@drawable/ic_search"
            android:drawableTint="#333333"
            android:fontFamily="sans-serif"/>

        <!-- Destination Image Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/holder_destinasi"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/destinationImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>



            <TextView
                android:id="@+id/textDestinationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textDestinationLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="4dp"
                android:textColor="#7B7B7B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textDestinationDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/footerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Travel Go"
            android:textColor="#333333"
            android:textSize="45sp" />
    </LinearLayout>
</ScrollView>
