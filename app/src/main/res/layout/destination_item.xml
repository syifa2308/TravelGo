<!-- res/layout/destination_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imageDestination"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/holder_destinasi" />

    <TextView
        android:id="@+id/textDestinationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Name"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDestinationLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location, Country"
        android:textSize="14sp"
        android:textColor="#7B7B7B"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="4dp" />

    <TextView
        android:id="@+id/textDestinationRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8/5"
        android:textSize="14sp"
        android:textColor="#7B7B7B"
        android:drawableLeft="@drawable/ic_star"
        android:drawablePadding="4dp"
        android:layout_marginTop="4dp" />
</LinearLayout>
